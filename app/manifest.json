{
  "manifest_version": 2,
  "author": "twig2let",
  "name": "TRC Extension",
  "short_name": "TRC-EXT",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "Show options menu",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "underscore-1.8.3.min.js",
      "defaultConfiguration.js",
      "configuration_setup.js",
      "configuration_api.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.yammer.com/*"],
      "css": ["abbreviation_highlighting.css"],
      "js": [
        "xregexp-2.0.min.js",
        "xregexp-build-0.1.0.js",
        "jquery-2.1.4.min.js",
        "underscore-1.8.3.min.js",
        "regex_settings.js",
        "abbreviation_highlighting_yammer.js"
      ],
      "run_at": "document_end"
    }, {
      "matches": ["*://www.facebook.com/groups/TDTPro/*"],
      "css": ["abbreviation_highlighting.css"],
      "js": [
        "xregexp-2.0.min.js",
        "xregexp-build-0.1.0.js",
        "jquery-2.1.4.min.js",
        "underscore-1.8.3.min.js",
        "regex_settings.js",
        "abbreviation_highlighting_facebook.js"
      ],
      "run_at": "document_idle"
    }
  ]
}