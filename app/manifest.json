{
  "manifest_version": 2,
  "author": "twig2let",
  "name": "TRC Extension",
  "short_name": "TRC-EXT",
  "version": "4.0",
  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "Show options menu",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "bookmarks"
  ],
  "background": {
    "scripts": [
      "underscore-1.8.3.min.js",
      "defaultConfiguration.js",
      "configuration_setup.js",
      "configuration_api.js",
      "context_menu.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://www.yammer.com/*"],
      "css": ["abbreviation_highlighting.css"],
      "js": [
        "xregexp-2.0.min.js",
        "xregexp-build-0.1.0.js",
        "jquery-2.1.4.min.js",
        "underscore-1.8.3.min.js",
        "regex_settings.js",
        "abbreviation_highlighting_yammer.js"
      ],
      "run_at": "document_end"
    }, {
      "matches": ["*://www.facebook.com/*"],
      "css": [
        "abbreviation_highlighting.css",
        "bookmark_manager_dialogue.css"
      ],
      "js": [
        "xregexp-2.0.min.js",
        "xregexp-build-0.1.0.js",
        "jquery-2.1.4.min.js",
        "underscore-1.8.3.min.js",
        "regex_settings.js",
        "abbreviation_highlighting_facebook.js",
        "bookmark_manager_dialogue.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "bookmark_manager_dialogue.html"
  ]
}